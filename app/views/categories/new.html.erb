<h1 class="text-center pt-4">Create a new category</h1>
<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, local: true, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>
        <div class="form-group row py-2">
          <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>

        <div class="text-center py-2">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="text-center pt-3">
      <%= link_to '[ Cancel and return to articles ]', articles_path, class: "text-info" %>
    </div>
  </div>
</div>
